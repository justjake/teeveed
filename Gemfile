# A sample Gemfile
source "https://rubygems.org"

# faraday handles API requests to Wit.ai
gem 'faraday', '~>0.8.0'
gem 'faraday_middleware', '~>0.8.0'

# we webapp now
gem 'sinatra'
gem 'haml'
gem 'active_record' # w/o rails: I'm not ready for MVC and huge config

# filesystem scanner
gem 'listen', '~> 2.0'

group :development do
  gem 'pry' # the best
end
