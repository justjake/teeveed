source "https://rubygems.org"

# faraday handles API requests to Wit.ai
gem 'faraday', '~>0.8.0'
gem 'faraday_middleware', '~>0.8.0'

# we webapp now
gem 'sinatra'
gem 'haml'

# database stuff - no Rails for me kthx
gem 'jdbc-sqlite3'
gem 'data_mapper'
gem 'dm-sqlite-adapter'

# used for class_attribute
gem 'activesupport'

# filesystem scanner
gem 'listen', '~> 2.0'

group :development do
  gem 'pry' # interactive console
  gem 'warbler' # jar builder for deployment
end
